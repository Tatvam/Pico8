function makesmoke(x,y,init_size,col)
	local s = {}
	s.x = x
	s.y = y
	s.col = col
	s.width = init_size
	s.width_final = init_size + rnd(3) +1
	s.t = 0
	s.max_t  = 30+rnd(10)
	s.dx = (rnd(.8).4)
	s.dy = rnd(.05)
	add(smoke,s)
	return s
end


funtion _init()
	smoke = {}
	cursorx = 50
	cursory = 50
	color = 7
end
